// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Clientes {
  cpf      BigInt    @id
  nome     String
  telefone BigInt
  animais  Animais[]
}

model Animais {
  idAnimais   Int       @id @default(autoincrement())
  nome        String
  tamanho     String
  tipo        String
  dataNasc    DateTime
  Clientes    Clientes @relation(fields: [clientesCpf], references: [cpf])
  clientesCpf BigInt
}
